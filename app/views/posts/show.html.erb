<!-- Page Content -->
<div class="container">

    <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">

            <!--<h1 class="page-header">
                Page Heading
                <small>Secondary Text</small>
            </h1>-->

            <!-- First Blog Post -->
            <h2>
                <%= link_to @post.title, user_post_path(current_user, @post)%>
            </h2>
            <p class="lead">
                by <%=  link_to current_user.username, user_path(current_user)%></a>
            </p>
            <p><span class="glyphicon glyphicon-time"></span> Posted on <%= @post.created_at %></p>
            <hr>

            <p id="content"><%= @post.content %></p>

            <hr>
            <h2>Corrections</h2>
              <table style="width: 100%">
                <col width="45%">
                <col width="45%">
                <col width="10%">
                <tr>
                  <th>Original Text</th>
                  <th>Suggested Text</th>
                  <th>Suggested By</th>
                </tr>
              <% corrections = Correction.where("post_id = ?", @post.id) %>
              <% corrections.each do |correction| %>
                <tr>
                  <td><%= correction.orig_text%></td>
                  <td><%= correction.new_text%></td>
                  <% @correcter = User.find_by_id(correction.correcter_id) %>
                  <td><%= link_to @correcter.username, user_path(@correcter)%></td>
                </tr>
              <% end %>
            </table>

            <hr>

        </div>

        <!-- Blog Sidebar Widgets Column -->
        <div class="col-md-4">

            <!-- Blog Search Well -->
            <div class="well">
                <h4>Blog Search</h4>
                <div class="input-group">
                    <input type="text" class="form-control">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">
                            <span class="glyphicon glyphicon-search"></span>
                    </button>
                    </span>
                </div>
                <!-- /.input-group -->
            </div>


            <!-- Side Widget Well -->
            <div class="well">
                <h4>Correction</h4>
                <p id="correction"><%= render :template => "corrections/new" %></p>
            </div>

        </div>

    </div>
    <!-- /.row -->
