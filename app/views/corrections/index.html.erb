<% @title = "LanguageBlog- Your Corrections" %>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>Corrections</h2>
      <hr>
  <table style="width: 100%">
    <col width="45%">
    <col width="45%">
    <col width="10%">
    <tr>
      <th>Original Text</th>
      <th>Suggested Text</th>
      <th>Suggested By</th>
    </tr>
  <% corrections = Correction.where("correcter_id = ?", @user.id) %>
  <% corrections.each do |correction| %>
    <tr>
      <td><%= correction.orig_text%></td>
      <td><%= correction.new_text%></td>
      <td><%= link_to @user.username, user_path(@user)%></td>
    </tr>
  <% end %>
</table>

    </div>
  </div>
</div>
