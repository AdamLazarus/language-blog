<div class="container">
      <div class="row">
          <div class="col-lg-12 text-center">
    <%= form_for [current_user, @post], html: { multipart: true } do |f| %>
      <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2>There are <%= pluralize(@post.errors.count, "error") %>:</h2>

          <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :content %>
        <%= f.text_field :content %>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
    </div>
