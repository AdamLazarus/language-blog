<% @title = "LanguageBlog- Create Post" %>

<div class="container">
      <div class="row">
          <div class="col-lg-12 text-center">
            <h2>Create New Post</h2>
    <%= form_for [current_user, @post], html: { multipart: true } do |f| %>
      <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2>There are <%= pluralize(@post.errors.count, "error") %>:</h2>

          <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field" style = "inline-block">
        <p><%= f.label :"Title: " %>
        <%= f.text_field :title %></p>
      </div><br/>
      <div class="field" style = "inline-block">
        <p><%= f.label :"Content: " %>
        <%= f.text_area :content %></p>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
    </div>
